@model TortaListaViewModel

@{
    ViewData["Title"] = "Editar";
}

@if (Model.Lista.Count != 0)
{
    <table class="table table-striped table-hover text-center">
        <tr>
            <td hidden>Id</td>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Data</th>
            <th>Tipo</th>
            <th>Vegana?</th>
        </tr>
        @foreach (var item in Model.Lista)
        {
            <tr>
                <td hidden>@item.TortaId</td>
                <td>@item.Nome</td>
                <td>@item.Descricao</td>
                <td class="m-2">R$ @item.Preco</td>
                <td>@item.Data.ToShortDateString()</td>
                <td>@item.Tipo</td>
                <td>@(item.IsVegana?"Sim":"Não")</td>
                <td>
                    <button onclick="IdTorta.value = @item.TortaId" type="button" class="btn-primary btn-sm btn-danger" data-toggle="modal" data-target="#ExcluirModal">Excluir</button>
                </td>
            </tr>

        }
    </table>

    <div class="modal fade" id="ExcluirModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ExcluirModalLabel">Confirmação</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Deseja realmente excluir o item?
                </div>
                <div class="modal-footer">
                    <form asp-action="excluir">
                        <input type="hidden" name="id" id="idTorta" />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Não</button>
                        <button type="submit" class="btn btn-danger">Sim</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

}
else
{

    <div class="alert alert-warning" role="alert">
        Não há nenhuma torta cadastrada!
    </div>
}
